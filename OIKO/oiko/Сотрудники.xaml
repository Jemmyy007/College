        <Label Content="Должность" HorizontalAlignment="Left" Margin="622,348,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="V 1.5.2" HorizontalAlignment="Left" Margin="23,440,0,0" VerticalAlignment="Top" Foreground="White"/>

