        <TextBox x:Name="txtLoginAdd" HorizontalAlignment="Left" Margin="48,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Height="30"/>
        <TextBox x:Name="txtPassAdd" HorizontalAlignment="Left" Margin="186,310,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="30"/>
